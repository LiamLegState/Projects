<Page
    x:Class="WannabeRPGv1.GameManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WannabeRPGv1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image x:ConnectionId='3' x:Name="Background" Source="/Assets/InGameBackground.gif" Grid.Row="0" Grid.ColumnSpan="9" Grid.RowSpan="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill"/>
        <Image x:ConnectionId='4' x:Name="pBlock1" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="2"/>
        <Image x:ConnectionId='5' x:Name="pBlock2" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="2"/>
        <Image x:ConnectionId='6' x:Name="pBlock3" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="2" Grid.Row="2"/>
        <Image x:ConnectionId='7' x:Name="pBlock4" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="1"/>
        <Image x:ConnectionId='8' x:Name="pBlock5" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1"/>
        <Image x:ConnectionId='9' x:Name="pBlock6" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="2" Grid.Row="1"/>
        <Image x:ConnectionId='10' x:Name="pBlock7" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="0" Grid.Row="0"/>
        <Image x:ConnectionId='11' x:Name="pBlock8" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="0"/>
        <Image x:ConnectionId='12' x:Name="pBlock9" Source="/Assets/PlayerBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="2" Grid.Row="0"/>

        <Image x:ConnectionId='13' x:Name="eBlock1" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="3" Grid.Row="2" Margin="0,183,0,0"/>
        <Image x:ConnectionId='14' x:Name="eBlock2" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="4" Grid.Row="2" Margin="0,183,0,0"/>
        <Image x:ConnectionId='15' x:Name="eBlock3" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="5" Grid.Row="2" Margin="0,183,0,0"/>
        <Image x:ConnectionId='16' x:Name="eBlock4" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="3" Grid.Row="1" Margin="0,183,0,0"/>
        <Image x:ConnectionId='17' x:Name="eBlock5" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="4" Grid.Row="1" Margin="0,183,0,0"/>
        <Image x:ConnectionId='18' x:Name="eBlock6" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="5" Grid.Row="1" Margin="0,183,0,0"/>
        <Image x:ConnectionId='19' x:Name="eBlock7" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="3" Grid.Row="0" Margin="0,183,0,0"/>
        <Image x:ConnectionId='20' x:Name="eBlock8" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="4" Grid.Row="0" Margin="0,183,0,0"/>
        <Image x:ConnectionId='21' x:Name="eBlock9" Source="/Assets/EnemyBlocks.png" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="5" Grid.Row="0" Margin="0,183,0,0"/>

        <Image x:ConnectionId='22' x:Name="player" Source="/Assets/CharacterIdle.gif" Stretch="Fill" Width="350" Height="200" Opacity="0"/>
        <Image x:ConnectionId='23' x:Name="arrow" Source="/Assets/Arrow.png" Stretch="Fill" Width="130" Height="50" Margin="0,169,0,141" Visibility="Collapsed"/>
        <Image x:ConnectionId='24' x:Name="playerTP" Stretch="None" Width="350" Height="200"/>
        <Image x:ConnectionId='25' x:Name="slime1" Source="/Assets/SlimeIdle.gif" Stretch="Fill" Margin="0,0,0,10" Width="350" Height="200" Opacity="0"/>
        <Image x:ConnectionId='26' x:Name="slime2" Source="/Assets/SlimeIdle.gif" Stretch="Fill" Margin="0,0,0,10" Width="350" Height="200" Opacity="0"/>
        <Image x:ConnectionId='27' x:Name="boss" Source="/Assets/BossIdle.gif" Stretch="Fill" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-50,0,0" Width="400" Height="300" Opacity="0"/>
        <Image x:ConnectionId='28' x:Name="tip" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,-5,0,0" Width="400" Height="180" Visibility="Collapsed"/>

        <TextBlock x:ConnectionId='29' x:Name="damage" FontFamily="m5x7" Width="100" Height="100" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>

        <MediaElement x:ConnectionId='30' x:Name="arrowSound" Source="/Assets/Arrow_fired.mp3" AutoPlay="false" Volume="0.1"/>
        <MediaElement x:ConnectionId='31' x:Name="SmokeSound" Source="/Assets/Smoke_sound.mp3" AutoPlay="false"/>
        <MediaElement x:ConnectionId='32' x:Name="stage1" Source="/Assets/Stage1.mp3" AutoPlay="true"/>
        <Slider x:ConnectionId='33' x:Name="VolumeSlider" Width="200" Height="200" Margin="280,10,160,150" Grid.Column="4" Grid.ColumnSpan="2" Value ="10" Minimum="0" Maximum="50"                                  Visibility="Collapsed"/>
        <Image x:ConnectionId='34' x:Name="Settings" Source="Assets/Settings.png" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="5" Width="64" Height="64"                                         />
        <Image x:ConnectionId='35' x:Name="LevelUp" Source="Assets/LevelUp.gif" HorizontalAlignment="Right" VerticalAlignment="Top" Width="320" Height="200" Visibility="Collapsed"/>
        <Image x:ConnectionId='36' x:Name="Portal" Source="Assets/Portal.gif" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Width="320" Height="250" Visibility="Collapsed"/>
        <Image x:ConnectionId='37' x:Name="Spacebar" Source="Assets/Spacebar.png" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Width="120" Height="100" Visibility="Collapsed"/>
        <Image x:ConnectionId='38' x:Name="YouWin" Source="Assets/YouWin.png" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,160,0,0" Width="400" Height="350" Visibility="Collapsed"/>

        <ProgressBar x:ConnectionId='39' x:Name="playerHP" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-160,0,0" Width="100" Height="60" Visibility="Collapsed" Maximum="100">
            <ProgressBar.Background>
                <ImageBrush ImageSource="/Assets/PlayerHealth.png"/>
            </ProgressBar.Background>
        </ProgressBar>

        <ProgressBar x:ConnectionId='40' x:Name="monsterHP1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="60" Visibility="Collapsed" Maximum="100">
            <ProgressBar.Background>
                <ImageBrush ImageSource="/Assets/MonsterHealth.png"/>
            </ProgressBar.Background>
        </ProgressBar>

        <ProgressBar x:ConnectionId='41' x:Name="monsterHP2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="60" Visibility="Collapsed" Opacity="1">
            <ProgressBar.Background>
                <ImageBrush ImageSource="/Assets/MonsterHealth.png"/>
            </ProgressBar.Background>
        </ProgressBar>

        <ProgressBar x:ConnectionId='42' x:Name="monsterHP3" HorizontalAlignment="Center" Width="120" Height="60" VerticalAlignment="Top" Visibility="Collapsed">
            <ProgressBar.Background>
                <ImageBrush ImageSource="/Assets/MonsterHealth.png"/>
            </ProgressBar.Background>
        </ProgressBar>
        <Button x:ConnectionId='43' x:Name="tryAgain" Content="Try again?" FontFamily="m5x7"                        Visibility="Collapsed" Grid.Column="2" Grid.ColumnSpan="2" Height="108" Width="250" FontSize="48" FontWeight="Normal" HorizontalAlignment="Center" IsEnabled="false" Margin="0,67,0,0" VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6A6A6"/>
                    <GradientStop Color="#FF5C5454" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Page>

